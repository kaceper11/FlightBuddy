<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlightBuddy.FlightParticipantProfilePage">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="20, 40, 20, 0">
                <Image x:Name="profileImage">
                </Image>
                <Label Text="Name" Font="Bold,15"></Label>
                <Label x:Name="flightParticipantName"
                    Text="" />

                <Label Text="Bio" Font="Bold,15"></Label>
                <Label x:Name="flightParticipantBio"
                       Text="" />

                <Button x:Name="likeButton"
                        TextColor="White"
                        Text="Like" BackgroundColor="Green"
                        Clicked="LikeButton_Clicked"
                        Margin="15, 20, 15, 20"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>