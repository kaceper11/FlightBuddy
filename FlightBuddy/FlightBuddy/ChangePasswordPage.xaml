<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlightBuddy.ChangePasswordPage" Title="Change password">

    <StackLayout VerticalOptions="Center" Margin="20">
        <Entry x:Name="oldPasswordEntry"
               Placeholder="Old password" 
               IsPassword="true"
               TextColor="{StaticResource blueColor}">

        </Entry>
        <Entry Placeholder="New password" 
               IsPassword="true"
               x:Name="newPasswordEntry"
               TextColor="{StaticResource blueColor}">
        </Entry>
        <Entry Placeholder="Confirm new password" 
               IsPassword="true"
               x:Name="confirmNewPasswordEntry"
               TextColor="{StaticResource blueColor}">
        </Entry>
        <Button x:Name="SaveNewPasswordButton"
                Text="Update password"
                Clicked="SaveNewPassword_Clicked"
                BackgroundColor="{StaticResource blueColor}"
                TextColor="White"
                Margin="0, 20, 0, 0"
                Style="{StaticResource normalButton}"></Button>
    </StackLayout>
</ContentPage>