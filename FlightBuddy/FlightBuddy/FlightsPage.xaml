<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlightBuddy.FlightsPage"
             NavigationPage.HasNavigationBar="false">


    <ListView x:Name="flightsListView" ItemTapped="UserFlight_Clicked" RowHeight="160">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <ViewCell.View>
                        <StackLayout>
                            <Label Text="{Binding Id}" TextColor="{StaticResource blueColor}" IsVisible="false"/>
                            <Label Text="{Binding FlightNumber}" TextColor="{StaticResource blueColor}" />
                            <Label Text="{Binding AirlineCode}" TextColor="{StaticResource blueColor}" />
                            <Label Text="{Binding OriginCode}" TextColor="{StaticResource blueColor}" />
                            <Label Text="{Binding DestinationCode}" TextColor="{StaticResource blueColor}" />
                            <Label Text="{Binding LeaveTimeAirport}" TextColor="{StaticResource blueColor}" />
                            <Label Text="{Binding ArrivalTimeAirport}" TextColor="{StaticResource blueColor}" />
                        </StackLayout>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>