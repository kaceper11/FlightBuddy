<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlightBuddy.UpdateProfilePage" Title="Update profile">

    <StackLayout VerticalOptions="Center" Margin="20">
        <ActivityIndicator x:Name="ActivityIndicator" IsRunning="{Binding IsBusy}" 
                           VerticalOptions="Center" HorizontalOptions="Center" Color="{StaticResource blueColor}"></ActivityIndicator>
        <Entry x:Name="emailEntry"
               Placeholder="Email address" 
               Keyboard="Email"
               TextColor="{StaticResource blueColor}">

        </Entry>
        <Entry x:Name="nameEntry"
               Placeholder="Name" 
               Text="Kacper"
               TextColor="{StaticResource blueColor}">
        </Entry>
        <Entry x:Name="mobileNumberEntry"
               Placeholder="Mobile number" 
               TextColor="{StaticResource blueColor}">
        </Entry>
        <Editor x:Name="bioEntry" AutoSize="TextChanges"
            Text="" Placeholder="Your bio" />
        <Button x:Name="UpdateProfileButton"
                Text="Save"
                Clicked="UpdateProfile_Clicked"
                BackgroundColor="{StaticResource blueColor}"
                TextColor="White"
                Margin="0, 20, 0, 0"
                Style="{StaticResource normalButton}"></Button>

    </StackLayout>
</ContentPage>