<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlightBuddy.SearchDestinationAirportPage">

    <StackLayout Orientation="Vertical">
        <SearchBar x:Name="destinationAirportSearch"
                   TextChanged="SearchAirports_TextChanged" Placeholder="Type your destination airport"/>

        <ListView x:Name="airportSuggestions" ItemTapped="SetDestinationAirport">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" 
                              Detail="{Binding Code}"
                              TextColor="{StaticResource blueColor}" 
                              DetailColor="Black"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>