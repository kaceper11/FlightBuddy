<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlightBuddy.FriendsPage"
             NavigationPage.HasNavigationBar="false">

    <ListView x:Name="friendsListView" ItemTapped="UserFriend_Clicked" RowHeight="80">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ImageCell ImageSource="{Binding ProfilePictureUrl}" Text="{Binding Name}" TextColor="{StaticResource blueColor}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>